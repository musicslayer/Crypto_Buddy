<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoBuddy" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSecondaryVariant">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:freezesText">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="actionOverflowButtonStyle">@style/DotsTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="singleLine">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ActionBarTheme.Title</item>
    </style>

    <style name="ActionBarTheme.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/border_round</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="21">0.09</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="DotsTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

    <style name="TextInverseTheme" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialButtonTheme" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>