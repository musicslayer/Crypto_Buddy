<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discrete_filter_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/discrete_filter_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Filter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/discrete_filter_dialog_applyFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/ic_baseline_filter_list_24"
        android:text="Apply Filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discrete_filter_dialog_toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/discrete_filter_dialog_selectAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/ic_baseline_select_all_24"
        android:text="Select All"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discrete_filter_dialog_applyFilterButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/discrete_filter_dialog_clearAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/ic_baseline_clear_all_24"
        android:text="Clear All"
        app:layout_constraintStart_toEndOf="@+id/discrete_filter_dialog_selectAllButton"
        app:layout_constraintTop_toBottomOf="@+id/discrete_filter_dialog_applyFilterButton" />

    <LinearLayout
        android:id="@+id/discrete_filter_dialog_checkBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discrete_filter_dialog_clearAllButton" />
</androidx.constraintlayout.widget.ConstraintLayout>