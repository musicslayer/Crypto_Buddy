<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replace_custom_token_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/replace_custom_token_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Replace Custom Token" />

    <TextView
        android:id="@+id/replace_custom_token_dialog_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replace_custom_token_dialog_toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/replace_custom_token_dialog_cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:drawableLeftCompat="@drawable/ic_baseline_cancel_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replace_custom_token_dialog_textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/replace_custom_token_dialog_confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Confirm"
        app:drawableLeftCompat="@drawable/ic_baseline_check_24"
        app:layout_constraintStart_toEndOf="@+id/replace_custom_token_dialog_cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/replace_custom_token_dialog_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>