<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_coins_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/delete_coins_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Delete Coins" />

    <TextView
        android:id="@+id/delete_coins_dialog_foundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete found coins from the app's database."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_coins_dialog_toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_coins_dialog_foundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Found Coins"
        app:drawableLeftCompat="@drawable/ic_baseline_delete_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_coins_dialog_foundTextView" />

    <TextView
        android:id="@+id/delete_coins_dialog_customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Delete custom coins from the app's database."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_coins_dialog_foundButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_coins_dialog_customButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Custom Coins"
        app:drawableLeftCompat="@drawable/ic_baseline_delete_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_coins_dialog_customTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>