<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crash_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/crash_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="CRASH" />

    <TextView
        android:id="@+id/crash_dialog_messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The app has crashed! The developer apologizes for any inconvenience caused. Please explore the options below:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crash_dialog_toolbar" />

    <TextView
        android:id="@+id/crash_dialog_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Send crash info to the developer.\nEmail: musicslayer@gmail.com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_messageTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crash_dialog_emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Crash Log"
        app:drawableLeftCompat="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_emailTextView" />

    <TextView
        android:id="@+id/crash_dialog_eraseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Erase all stored app data. Purchase data will be temporarily reset, but will restore itself automatically shortly after restarting the app."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_emailButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crash_dialog_eraseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase Everything"
        app:drawableLeftCompat="@drawable/ic_baseline_warning_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_eraseTextView" />

    <TextView
        android:id="@+id/crash_dialog_exitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Exit the app."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_eraseButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crash_dialog_exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit App"
        app:drawableLeftCompat="@drawable/ic_baseline_exit_to_app_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crash_dialog_exitTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>